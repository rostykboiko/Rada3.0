<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_small"
    android:layout_marginBottom="@dimen/margin_normal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_img_view"
        android:layout_width="@dimen/profile_icon_width"
        android:layout_height="@dimen/profile_icon_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_normal" />

    <TextView
        android:id="@+id/userEmailItem"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row_text_height"
        android:layout_marginStart="@dimen/margin_tab"
        android:layout_marginTop="@dimen/margin_medium"
        android:padding="@dimen/margin_small"
        android:textSize="@dimen/text_size_standard" />

    <RelativeLayout
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/checked_bckGround_Start"
            android:src="@drawable/users_recycler_bgn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/checked_icon_Start"
            android:src="@drawable/ic_check_white_24dp" />

    </RelativeLayout>

</RelativeLayout>