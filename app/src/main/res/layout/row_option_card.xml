<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_small"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/checkBoxTop"
        android:src="@drawable/ic_material_checkbox_blank" />

    <TextView
        android:id="@+id/optionItemDialog"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row_text_height"
        android:layout_marginStart="@dimen/desc_padding"
        android:layout_marginTop="@dimen/margin_normal"
        android:maxLength="25"
        android:padding="@dimen/margin_small"
        android:text="@string/ed_option"
        android:textSize="@dimen/text_size_standard" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="0dp"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingStart="@dimen/margin_medium"
        android:theme="@style/AppTheme.ProgressBar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/optionItemDialog">

        <ImageView
            android:id="@+id/participants_icon3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/participants_icon2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/participants_icon1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/percentTv"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:layout_gravity="center_vertical"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:visibility="gone"
            android:text="1" />

    </LinearLayout>

</RelativeLayout>